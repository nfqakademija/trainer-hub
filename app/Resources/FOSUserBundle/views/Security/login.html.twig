{% extends 'base.html.twig' %}
{% block body %}
    {% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}

    <div class="container">
        {% if error %}
            <div class="alert alert-danger alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <div class="panel panel-login">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3"></div>
                    <div class="col-xs-6">
                        Prisijungimas
                    </div>
                    <div class="col-xs-3"></div>
                </div>
                <hr>
            </div>
            <div class="panel-body">
                <div class="col-lg-3 col-md-3 col-sm-3"></div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <form>
                        <div class="form-group">
                            <input type="text" name="_username" id="username" tabindex="1"
                                   class="form-control" placeholder="El. paštas"
                                   value="{{ last_username }}">
                        </div>
                        <div class="form-group">
                            <input type="password" name="_password" id="password" tabindex="2"
                                   class="form-control" placeholder="Slaptažodis">
                        </div>
                        <div class="form-group">

                            <input type="submit" name="_submit" id=_submit" tabindex="4"
                                   class="form-control btn btn-login" value="Prisijungti">

                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="text-center">
                                        <a href="{{ path('fos_user_resetting_request') }}" tabindex="5"
                                           class="forgot-password">Pamiršote slaptažodį?</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3"></div>
            </div>
        </div>
    </div>


{% endblock %}