{% form_theme trainingForm 'bootstrap_3_layout.html.twig' %}

{% extends 'base.html.twig' %}

{% block body %}

    {#{{ form_start(trainingForm, {'attr' : {'novalidate' : 'novalidate'}}) }}#}
    {{ form_start(trainingForm, {'attr' : {'novalidate' : 'novalidate'}}) }}

    <div class="container">

        <div class="panel panel-login">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3"></div>
                    <div class="col-xs-6">
                        Nauja treniruotÄ—
                    </div>
                    <div class="col-xs-3"></div>
                </div>
                <hr>
            </div>
            <div class="panel-body">
                <div class="col-lg-3 col-md-3 col-sm-3"></div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    {{ form_row(trainingForm.title) }}
                    {{ form_row(trainingForm.price) }}
                    {{ form_row(trainingForm.category) }}
                    {{ form_row(trainingForm.city) }}
                    {{ form_row(trainingForm.description) }}
                    <hr>

                    <ul class="date" data-prototype="{{ form_widget(trainingForm.trainingTime.vars.prototype)|e('html_attr') }}">
                        {% for date in trainingForm.trainingTime %}
                            <li>
                                {{ form_rest(date) }}
                            </li>
                        {% endfor %}
                    </ul>

                    {{ form_end(trainingForm) }}
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3"></div>
            </div>
        </div>
    </div>



{% endblock %}

