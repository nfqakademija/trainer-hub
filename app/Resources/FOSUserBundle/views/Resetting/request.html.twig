{% extends 'base.html.twig' %}

{% block body %}

    {% trans_default_domain 'FOSUserBundle' %}


    <form action="{{ path('fos_user_resetting_send_email')}}" class="fos_user_resetting_request" method="POST">
        <div class="container">

            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3"></div>
                        <div class="col-xs-6">
                            Įveskite savo el. paštą
                        </div>
                        <div class="col-xs-3"></div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="col-lg-3 col-md-3 col-sm-3"></div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <form>
                            <div class="form-group">
                                <input type="text" name="username" id="username" tabindex="1"
                                       class="form-control" placeholder="El. paštas">
                            </div>
                            <div class="form-group">
                                <input type="submit" tabindex="2" class="form-control btn btn-login"
                                       value="{{ 'resetting.request.submit'|trans }}">
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-3"></div>
                </div>
            </div>
        </div>



{% endblock %}